{
    "manifest_version": 3,
    "name": "Modern Downloader",
    "version": "2.0.0",
    "description": "Send links directly to Modern Downloader app.",
    "permissions": [
        "activeTab",
        "scripting",
        "cookies",
        "contextMenus",
        "storage"
    ],
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": [
                "content.js"
            ]
        }
    ],
    "action": {
        "default_popup": "popup.html",
        "default_icon": {
            "16": "icons/icon16.png",
            "48": "icons/icon48.png",
            "128": "icons/icon128.png"
        }
    },
    "background": {
        "service_worker": "background.js"
    },
    "icons": {
        "16": "icons/icon16.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
    },
    "host_permissions": [
        "*://*/*"
    ]
}