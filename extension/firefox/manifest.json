{
    "manifest_version": 2,
    "name": "Modern Downloader Integration",
    "version": "1.0",
    "description": "Send links to Modern Downloader via context menu.",
    "permissions": [
        "contextMenus",
        "tabs",
        "activeTab"
    ],
    "background": {
        "scripts": [
            "background.js"
        ],
        "persistent": true
    },
    "browser_specific_settings": {
        "gecko": {
            "id": "moderndownloader@example.com",
            "strict_min_version": "109.0"
        }
    },
    "browser_action": {
        "default_title": "Send to Downloader"
    }
}