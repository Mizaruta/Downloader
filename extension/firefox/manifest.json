{
    "manifest_version": 2,
    "name": "Modern Downloader",
    "version": "2.0.0",
    "description": "Send links directly to Modern Downloader app.",
    "permissions": [
        "activeTab",
        "cookies",
        "storage",
        "<all_urls>",
        "webRequest",
        "http://127.0.0.1:6969/",
        "ws://127.0.0.1:6969/",
        "contextMenus"
    ],
    "content_security_policy": "script-src 'self'; object-src 'self'; connect-src 'self' ws://127.0.0.1:6969 http://127.0.0.1:6969 http://localhost:6969 ws://localhost:6969;",
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": [
                "content.js"
            ]
        }
    ],
    "browser_action": {
        "default_popup": "popup.html",
        "default_icon": {
            "16": "icons/icon16.png",
            "48": "icons/icon48.png",
            "128": "icons/icon128.png"
        }
    },
    "background": {
        "scripts": [
            "background.js"
        ]
    },
    "browser_specific_settings": {
        "gecko": {
            "id": "moderndownloader@extension.addon"
        }
    },
    "icons": {
        "16": "icons/icon16.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
    }
}